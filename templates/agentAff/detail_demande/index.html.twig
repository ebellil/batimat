{% extends 'baseagentAff.html.twig' %}

{% block title 'Gérer les categories' %}

{% block body %}
	<div class="container">
		<h1>Gérer les catégories</h1>
		
		{% for message in app.flashes('success') %}
			<div class="card-panel green accent-3">
				{{ message }}
			</div>
		{% endfor %}

		<div>
			<table>
        		<thead>
          			<tr>
              			<th>Libellé</th>
              			<th>Actions</th>
          			</tr>
        		</thead>
        		<tbody>
        			{% for categorie in categories %}
			        <tr>
			            <td>{{categorie.libelle}}</td>
			            <td>
			            	<a href="{{ path('adminGene.categorie.edit', {id: categorie.id}) }}" class="waves-effect waves-light btn">Editer</a>
			            </td>
			            <td>
			            	<form method="post" action="{{ path('adminGene.categorie.delete', {id: categorie.id}) }}">
			            		<input type="hidden" name="_method" value="DELETE">
			            		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id) }}">
			            		<button class="btn waves-effect waves-light">Supprimer</button>
			            	</form>
			            </td>
			        </tr>
			        {% endfor %}
        		</tbody>
      		</table>
      		<div class="row">
      			<a href="{{ path('adminGene.categorie.new') }}" class="waves-effect waves-light btn">Ajouter</a>
      		</div>
		</div>
	</div>


{% endblock %}