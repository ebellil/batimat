{% extends 'baseAgentAff.html.twig' %}

{% block title 'Ajouter une nouvelle demande de matériel' %}

{% block body %}
	<div class="container">
	<h1>Ajouter une demande de matériels</h1>
		{#{ include('agentAff/form/_form.html.twig', {button: 'Ajouter'}) }#}
	</div>


{{ form_start(form) }}
	<div class="container">
        {#{ form_row(form.fullname)}#}
        <div class="col-sm-8 col-sm-offset-2" id="detaildemande_list" data-prototype="{{ form_widget(form.detaildemandes.vars.prototype)|e('html_attr') }}">
          {% if form.detaildemande is defined %}
            {%for row in form.detaildemande %}

                <div class="panel panel-warning">
                    <div class="panel-heading">
                        <strong>{#{ row.vars.value.title }#}</strong>
                    </div>
                    <div class="panel-body">
                        {#{ form_row(row)}#}
                    </div>
                    
                </div>
            {% endfor %}
          {% endif %}
        </div>
  </div>
    {{ form_end(form) }}

{% endblock %}

   
{% block javascripts %}
   
     <script type="text/javascript"> 
   $(document).ready(function(){
    $('select').formSelect();
  });
    </script>
{% endblock %}